{
  "Simulator": {
    "ConnectionDelayMs": 100,
    "TelemetryProfiles": {
      "environmental": [
        {
          "Name": "temperature",
          "DataType": "double",
          "Generator": "Increment",
          "InitialValue": 20.0,
          "Step": 1.0,
          "Min": 15.0,
          "Max": 30.0
        },
        {
          "Name": "humidity",
          "DataType": "double",
          "Generator": "RandomRange",
          "Min": 40.0,
          "Max": 80.0
        },
        {
          "Name": "pressure",
          "DataType": "double",
          "Generator": "SineWave",
          "Amplitude": 10.0,
          "Offset": 1013.25,
          "PeriodSeconds": 60
        },
        {
          "Name": "status",
          "DataType": "string",
          "Generator": "EnumCycle",
          "Values": [ "ON", "STANDBY", "OFF" ]
        },
        {
          "Name": "timestamp",
          "DataType": "string",
          "Generator": "Timestamp"
        },
        {
          "Name": "location",
          "DataType": "string",
          "Generator": "DeviceHashSelect",
          "Values": [ "Building-A", "Building-B", "Building-C", "Building-D", "Building-E" ]
        }
      ],
      "power": [
        {
          "Name": "voltage",
          "DataType": "double",
          "Generator": "RandomRange",
          "Min": 220.0,
          "Max": 240.0
        },
        {
          "Name": "current",
          "DataType": "double",
          "Generator": "SineWave",
          "Amplitude": 2.0,
          "Offset": 10.0,
          "PeriodSeconds": 30
        },
        {
          "Name": "status",
          "DataType": "string",
          "Generator": "EnumCycle",
          "Values": [ "ON", "STANDBY", "OFF" ]
        },
        {
          "Name": "timestamp",
          "DataType": "string",
          "Generator": "Timestamp"
        }
      ]
    },
    "Devices": [
      {
        "DeviceId": "sensor-001",
        "Enabled": true,
        "SendIntervalMs": 5000,
        "TelemetryProfileName": "environmental",
        "Broker": {
          "Type": "IoTHub",
          "AuthMethod": "SAS",
          "ConnectionString": "HostName=myhub.azure-devices.net;DeviceId=sensor-001;SharedAccessKey=your-base64-device-key-here"
        }
      },
      {
        "DeviceId": "sensor-002",
        "Enabled": true,
        "SendIntervalMs": 5000,
        "TelemetryProfileName": "environmental",
        "Broker": {
          "Type": "IoTHub",
          "Hostname": "myhub.azure-devices.net",
          "Port": 8883,
          "AuthMethod": "X509",
          "CertificatePath": "certs/sensor-002.pem",
          "KeyPath": "certs/sensor-002-key.pem"
        }
      },
      {
        "DeviceId": "gateway-001",
        "Enabled": true,
        "SendIntervalMs": 10000,
        "TelemetryProfileName": "power",
        "Broker": {
          "Type": "MqttMtls",
          "Hostname": "myns.westus2-1.ts.eventgrid.azure.net",
          "Port": 8883,
          "Topic": "devices/gateway-001/telemetry",
          "CertificatePath": "certs/gateway-001.pem",
          "KeyPath": "certs/gateway-001-key.pem",
          "CaCertificatePath": "certs/eventgrid-ca.pem"
        }
      },
      {
        "DeviceId": "local-device-001",
        "Enabled": false,
        "SendIntervalMs": 3000,
        "TelemetryProfileName": "environmental",
        "Broker": {
          "Type": "Mqtt",
          "Hostname": "localhost",
          "Port": 1883,
          "Username": "device1",
          "Password": "your-password-here",
          "Topic": "devices/local-device-001/telemetry"
        }
      }
    ],
    "IoTHubFleets": [
      {
        "Enabled": true,
        "ConnectionString": "HostName=myhub.azure-devices.net;SharedAccessKeyName=iothubowner;SharedAccessKey=your-owner-key-here",
        "DevicePrefix": "sim",
        "DeviceCount": 5,
        "SendIntervalMs": 5000,
        "TelemetryProfileName": "environmental"
      }
    ]
  }
}
